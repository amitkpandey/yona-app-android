pipeline {
  agent {
    node {
      label 'android-f25'
    }
    
  }
  stages {
    stage('checkout') {
      steps {
        git(branch: 'Jenkinstest', credentialsId: 'git yona', url: 'https://github.com/yonadev/yona-app-android.git', changelog: true)
      }
    }
    stage('gradle step') {
      steps {
        sh 'cd $ANDROID_HOME/tools android update sdk --no-ui --all --filter platform-tools,android-27,extra-android-m2repository'
        script {
          echo sh(script: 'env|sort', returnStdout: true)
        }
        
        sh './gradlew app:assembleDebug'
      }
    }
    stage('Build') {
      steps {
        archiveArtifacts(artifacts: 'app/build/outputs/apk/*.apk', allowEmptyArchive: true)
      }
    }
  }
}