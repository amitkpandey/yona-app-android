<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActivityTransitions">true</item>

        <!--<item name="android:windowEnterTransition">@transition/window_transition</item>-->
        <!--<item name="android:windowExitTransition">@transition/window_transition</item>-->
        <!--<item name="android:fragmentEnterTransition">@transition/window_transition</item>-->
        <!--<item name="android:fragmentReturnTransition">@transition/window_transition</item>-->
        <!--<item name="android:fragmentReenterTransition">@transition/window_transition</item>-->

        <!--&lt;!&ndash; Shared Element Transactions &ndash;&gt;-->
        <!--<item name="android:windowSharedElementEnterTransition">@transition/shared_element_transition</item>-->
        <!--<item name="android:windowSharedElementExitTransition">@transition/shared_element_transition</item>-->

        <!--<item name="android:fragmentSharedElementEnterTransition">@transition/shared_element_transition</item>-->
        <!--<item name="android:fragmentSharedElementReturnTransition">@transition/shared_element_transition</item>-->
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/welkom_screen</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="InputTxt">
        <item name="android:textSize">14sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/mid_blue</item>
    </style>

    <style name="BtnTxtSmall">
        <item name="android:textSize">12sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="NavTitle" parent="@style/parentNavTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="NavTitleFiftyOpacity" parent="@style/parentNavTitle">
        <item name="android:textColor">@color/white_fifty_opacity</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="DateSixtyOpacity" parent="parentDate">
        <item name="android:textColor">@color/black_sixty_opacity</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="SeTitle" parent="@style/ParentSeTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="FooterTitleFiftyOpacity" parent="parentFooterTxt">
        <item name="android:textColor">@color/black_fifty_opacity</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="BtnTxtLgSpacing" parent="parentBtnTxtLg">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="SeScorePos">
        <item name="android:textSize">32sp</item>
        <item name="textStyle">@integer/oswald_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TabTitleLg">
        <item name="android:textSize">13sp</item>
        <item name="textStyle">@integer/roboto_regular</item>
        <item name="android:textColor">@color/white_fifty_opacity</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

</resources>
