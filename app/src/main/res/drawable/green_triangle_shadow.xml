<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/sickly_green" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="-15"
            android:pivotX="0%"
            android:pivotY="100%"
            android:toDegrees="20">
            <shape>
                <size
                    android:width="30dp"
                    android:height="45dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/sickly_green_two" />
                <solid android:color="@color/sickly_green_two" />
            </shape>
        </rotate>
    </item>
</layer-list>