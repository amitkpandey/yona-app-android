<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/progressbar_radius" />
            <gradient
                android:centerColor="@color/progressbar_background"
                android:endColor="@color/progressbar_background"
                android:startColor="@color/progressbar_background" />
        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/progressbar_radius" />
                <gradient
                    android:endColor="@color/darkish_pink"
                    android:startColor="@color/darkish_pink" />
            </shape>
        </clip>
    </item>

</layer-list>