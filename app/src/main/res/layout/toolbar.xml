<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixty_four"
    android:background="@drawable/triangle_shadow_grape"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/challenges_margin_left">

        <ImageView
            android:id="@+id/rightIcon"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <nu.yona.app.customview.YonaFontTextView
            android:id="@+id/toolbar_title"
            style="@style/NavTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twelve"
            android:layout_toLeftOf="@id/rightIcon"
            android:layout_toStartOf="@id/rightIcon"
            android:maxLines="1"
            android:textColor="@color/white" />

    </RelativeLayout>
</android.support.v7.widget.Toolbar>