<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/challenges_header_detail_height"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/challenges_header_margin_bottom"
    android:paddingLeft="@dimen/margin_bucket_screen"
    android:paddingRight="@dimen/margin_bucket_screen">

    <ImageView
        android:id="@+id/img_bucket"
        android:layout_width="@dimen/image_bucket_size"
        android:layout_height="@dimen/image_bucket_size"
        android:layout_marginTop="@dimen/image_margin_top"
        android:background="@drawable/circle_challenges"
        android:padding="@dimen/challenges_padding_imge"
        android:src="@drawable/icn_challenge_nogo" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/goal_challenge_type_title"
        style="@style/ChallengeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/challenges_margin_top"
        android:gravity="center" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/goal_challenge_type_subscribeTxt"
        style="@style/SubscribeTxtWithoutLineSpacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/challenges_desc_margin_top"
        android:gravity="center" />

</LinearLayout>
