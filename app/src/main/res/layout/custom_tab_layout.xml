<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/challenge_tab_height"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/tab_icon_top_width"
        android:layout_height="@dimen/tab_icon_top_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/tab_challenges_margin_top"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/tab_image"
            android:layout_width="@dimen/tab_icon_height"
            android:layout_height="@dimen/tab_icon_height"
            android:src="@drawable/icn_challenge_nogo" />

        <nu.yona.app.customview.YonaFontTextView
            android:id="@+id/tab_item_count"
            style="@style/BdgTxt"
            android:layout_width="@dimen/challenges_counter_width"
            android:layout_height="@dimen/challenges_counter_width"
            android:layout_alignEnd="@id/tab_image"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tab_image"
            android:background="@drawable/circle_counter"
            android:gravity="center"
            android:visibility="gone" />

    </RelativeLayout>

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/tab_text"
        style="@style/TabTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twelve"
        android:layout_marginTop="@dimen/thirteen"
        android:gravity="center_horizontal"
        android:textColor="@color/white" />
</LinearLayout>