<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_two"
    android:orientation="horizontal"
    android:visibility="gone">

    <nu.yona.app.customview.YonaFontEditTextViewGeneral
        android:id="@+id/userMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/comment_background"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="5"
        android:minHeight="@dimen/fifty"
        android:paddingBottom="@dimen/comment_box_msg_padding"
        android:paddingLeft="@dimen/comment_box_msg_padding_left"
        android:paddingRight="@dimen/comment_box_msg_padding"
        android:paddingTop="@dimen/comment_box_msg_padding"
        android:scrollbars="vertical"
        android:textCursorDrawable="@drawable/edit_text_cursor" />

    <nu.yona.app.customview.YonaFontButton
        android:id="@+id/btnSend"
        style="@style/BtnTxtSmall"
        android:layout_width="@dimen/send_bttuon"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/mid_blue"
        android:minHeight="@dimen/fifty"
        android:text="@string/send" />

</LinearLayout>