<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friendsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_layout"
        android:background="@color/dashboard"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="@dimen/eighty"
            android:layout_height="@dimen/eighty"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_three"
            android:background="@drawable/profile_selector"
            android:gravity="center_horizontal" />

        <nu.yona.app.customview.YonaFontTextView
            android:id="@+id/name"
            style="@style/SplashTxt"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

        <nu.yona.app.customview.YonaFontTextView
            android:id="@id/nick_name"
            style="@style/NavTitle"
            android:layout_marginTop="@dimen/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dashboard"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/white"
        app:tabIndicatorHeight="@dimen/tabIndicatorHeight"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/dashboard_selected_tab"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/dashboard_deselected_tab" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>