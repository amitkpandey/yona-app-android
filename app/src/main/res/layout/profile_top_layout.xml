<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_layout"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|enterAlways">

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/profileIcon"
        style="@style/SplashTxt"
        android:layout_width="@dimen/eighty_three"
        android:layout_height="@dimen/eighty_three"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/nine"
        android:background="@drawable/bg_small_self_round"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="@dimen/eighty_three"
        android:layout_height="@dimen/eighty_three"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/nine"
        android:background="@drawable/profile_selector"
        android:gravity="center_horizontal"
        android:transitionName="@string/profile_transition"
        android:visibility="gone" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/name"
        style="@style/SplashTxt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/twenty_nine"
        android:layout_marginTop="@dimen/fifteen"
        android:gravity="center_horizontal" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@id/nick_name"
        style="@style/NavTitleFiftyOpacity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ninteen"
        android:layout_marginTop="@dimen/three"
        android:gravity="center_horizontal" />
</LinearLayout>