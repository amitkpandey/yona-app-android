<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/message_header"
    android:background="@color/white_three"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="@color/bg_gradient_three" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/msg_header"
        style="@style/DateSixtyOpacity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sticky_header_height"
        android:background="@color/white_three"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:background="@color/bg_gradient_three" />

</LinearLayout>