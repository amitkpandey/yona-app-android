<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/week_score_width"
    android:layout_height="@dimen/week_score_height"
    android:layout_gravity="center"
    android:orientation="vertical">

    <nu.yona.app.customview.graph.CircleGraphView
        android:id="@+id/circle_view"
        android:layout_width="@dimen/week_score_width"
        android:layout_height="@dimen/week_score_height" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/txtWeekOfDay"
        style="@style/DateWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/week_score_margin_top"
        android:gravity="center"
        android:maxLines="1" />

    <nu.yona.app.customview.YonaFontTextView
        android:id="@+id/txtDateOfWeek"
        style="@style/DateWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWeekOfDay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/week_score_margin_text_top" />

</RelativeLayout>