<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_relative_layout">

    <nu.yona.app.customview.YonaFontTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_title"
        style="@style/SeTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="@drawable/item_gradient"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/thirty_two"
        android:text="Title"
        android:layout_alignParentLeft="true"
        android:textColor="@color/black" />

    <CheckBox
        android:id="@+id/list_check_box"
        android:layout_width="@dimen/seventy"
        android:layout_height="@dimen/seventy"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" />


</RelativeLayout>